{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "lib": ["esnext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "vite/client", "element-plus/global"],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
